{%- assign gavatar = comment.email | remove: ' ' | strip_newlines | downcase | md5 -%}
<div class="t4s-row t4s-align-items-center t4s-gx-20">
	<div class="t4s-col-item t4s-col-auto t4s-col_avatar_cm t4s-pr"><img alt="t4s-avatar" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="https://www.gravatar.com/avatar/{{ gavatar }}?s=80&d=mm&r=g" data-srcset="https://www.gravatar.com/avatar/{{ gavatar }}?s=160&d=mm&r=g 2x" width="{{ gavatar.width }}" height="{{ gavatar.height }}" class="lazyloadt4s t4s-comment__avatar" loading="lazy"><span class="lazyloadt4s-loader"></span></div>
	<div class="t4s-col-item t4s-col">
		<h5 class="t4s-comment__author">{{ comment.author }}</h5>
		<div class="t4s-comment__content">{{ comment.content }}</div>
		<div class="t4s-comment__date t4s-fnt-fm-3">{{ comment.created_at | date: '%B %e, %Y at %R%P' }}</div>
	</div>
</div>